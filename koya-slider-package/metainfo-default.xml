    <components>
      <component>
        <name>BROKER0</name>
        <category>MASTER</category>
        <minInstanceCount>1</minInstanceCount>
        <!--componentExports>
          <componentExport>
            <name>host_port</name>
            <value>${THIS_HOST}:${site.global.listen_port}</value>
          </componentExport>
        </componentExports-->
        <commandScript>
          <script>scripts/kafka.py</script>
          <scriptType>PYTHON</scriptType>
        </commandScript>
      </component>
      <component>
        <name>BROKER1</name>
        <category>MASTER</category>
