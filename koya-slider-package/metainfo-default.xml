        <dictionaryName>BROKER0</dictionaryName>
      </configFile>
      <configFile>
        <type>xml</type>
        <fileName>BROKER1.xml</fileName>
        <dictionaryName>BROKER1</dictionaryName>
      </configFile>
      <configFile>
        <type>xml</type>
        <fileName>BROKER-COMMON.xml</fileName>
        <dictionaryName>BROKER-COMMON</dictionaryName>
      </configFile>
    </configFiles>

    <osSpecifics>
      <osSpecific>
        <osType>any</osType>
        <packages>
          <package>
            <type>tarball</type>
            <name>files/${kafka.version}.tgz</name>
          </package>
        </packages>
      </osSpecific>
    </osSpecifics>

  </application>
</metainfo>
